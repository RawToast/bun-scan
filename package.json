{
  "name": "bun-scan",
  "private": true,
  "description": "Vulnerability scanner for Bun projects",
  "keywords": [
    "audit",
    "bun",
    "dependencies",
    "osv",
    "scanner",
    "security",
    "security-scanner",
    "vulnerability",
    "vulnerability-scanner"
  ],
  "homepage": "https://github.com/RawToast/bun-scan",
  "bugs": {
    "url": "https://github.com/RawToast/bun-scan/issues"
  },
  "license": "MIT",
  "author": "rawtoast",
  "repository": {
    "type": "git",
    "url": "https://github.com/RawToast/bun-scan"
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/RawToast"
  },
  "workspaces": [
    "packages/*"
  ],
  "type": "module",
  "scripts": {
    "dev": "turbo watch compile format lint",
    "build": "turbo build",
    "lint": "oxlint",
    "lint:check": "oxlint check packages",
    "format": "oxfmt",
    "format:check": "oxfmt --check",
    "compile": "turbo compile",
    "test": "turbo test",
    "clean": "rm -rf dist build node_modules/.cache",
    "check": "turbo format:check lint:check compile test --parallel",
    "prepare": "bunx lefthook install"
  },
  "devDependencies": {
    "@types/bun": "1.3.6",
    "@typescript/native-preview": "7.0.0-dev.20260114.1",
    "bun-types": "1.3.6",
    "lefthook": "2.0.15",
    "oxfmt": "0.24.0",
    "oxlint": "1.39.0",
    "turbo": "2.7.5"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "packageManager": "bun@1.3.0"
}
